<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mainListImage"
        android:layout_width="56dp"
        android:src="@drawable/news"
        android:padding="12dp"
        android:layout_height="56dp" />

    <TextView
        android:id="@+id/mainListItemName"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_toRightOf="@+id/mainListImage"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:text="News"
        android:textColor="@color/navigationDrawerTextColor"
        android:textSize="18sp" />

    <View android:layout_height="0.2dp"
          android:layout_width="match_parent"
        android:background="#b3e5fe"
        android:layout_alignBottom="@+id/mainListImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>